{
  "name": "@cabasvert/server",
  "author": "Cabas Vert",
  "version": "0.2.2-beta.1",
  "description": "The server app for Cabas Vert",
  "license": "GPL-3.0",
  "private": true,
  "main": "dist/index.js",
  "bin": {
    "cabasvert-server": "dist/cli.js"
  },
  "files": [
    "dist",
    "public",
    "config.json"
  ],
  "scripts": {
    "clean": "rm -rf dist/ && rm -rf artifacts/ && rm -rf .nyc_output/ && rm -rf coverage/ && rm -rf logs/",
    "compile": "tsc",
    "compile-test": "tsc",
    "prestart": "npm-run-all compile",
    "start": "node dist/cli",
    "start:watch": "npm-run-all --parallel start:watch:*",
    "start:watch:compile": "tsc -w",
    "start:watch:node": "nodemon --inspect dist/cli --watch dist",
    "pretest": "npm-run-all compile",
    "test": "nyc -r lcov -e .ts -x \"**/*.spec.ts\" node ../../scripts/run-tests.js \"test/**/*.spec.ts\"",
    "test:watch": "watch 'npm run test' dist --wait=0.1",
    "prebuild": "DATABASE=couchdb npm-run-all lint license-check test",
    "build": "npm-run-all clean compile pack",
    "pack": "npm pack && mkdir artifacts ; mv cabasvert-server-*.tgz artifacts/",
    "lint": "tslint --project '../../tslint.json' 'src/**/*.ts' 'test/**/*.ts'",
    "license-check": "node ../../scripts/license-check.js"
  },
  "dependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/crypto-js": "^3.1.38",
    "@types/express": "^4.11.0",
    "@types/graceful-fs": "^4.1.2",
    "@types/helmet": "^0.0.37",
    "@types/morgan": "^1.7.35",
    "@types/nodemailer": "^4.3.1",
    "@types/pouchdb": "^6.3.2",
    "@types/pouchdb-find": "^6.3.2",
    "@types/winston": "^2.3.7",
    "body-parser": "^1.18.2",
    "cors": "^2.8.4",
    "crypto-js": "^3.1.9-1",
    "express": "^4.16.2",
    "graceful-fs": "^4.1.11",
    "helmet": "^3.9.0",
    "inversify": "^4.9.0",
    "inversify-express-utils": "^6.0.0",
    "minimist": "^1.2.0",
    "morgan": "^1.9.0",
    "nodemailer": "^4.4.1",
    "pouchdb-adapter-http": "^6.4.1",
    "pouchdb-ajax": "^6.4.1",
    "pouchdb-authentication": "^1.1.3",
    "pouchdb-core": "^6.4.1",
    "pouchdb-find": "^6.4.1",
    "reflect-metadata": "^0.1.10",
    "uid-generator": "^1.0.0",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/jasmine": "^2.8.2",
    "codelyzer": "^4.5.0",
    "jasmine": "^3.1.0",
    "jasmine-spec-reporter": "^4.2.1",
    "jasmine-ts": "^0.2.1",
    "listr": "^0.14.2",
    "nodemon": "^1.14.3",
    "nyc": "^11.4.1",
    "pouchdb-security-helper": "^1.1.1",
    "request": "^2.83.0",
    "supertest": "^3.0.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2",
    "watch": "^1.0.2"
  }
}
