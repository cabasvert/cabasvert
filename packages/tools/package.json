{
  "name": "@cabasvert/tools",
  "author": "Cabas Vert",
  "version": "0.1.1-beta.0",
  "description": "The admin and dev tools for Cabas Vert",
  "main": "dist/index.js",
  "bin": {
    "cvt": "dist/cli.js"
  },
  "files": [
    "dist",
    "assets",
    "config.json"
  ],
  "scripts": {
    "clean": "rm -rf dist/ && rm -rf .nyc_output/ && rm -rf coverage/ && rm -rf logs/",
    "compile": "tsc",
    "prebuild": "npm-run-all lint license-check",
    "build": "npm-run-all compile",
    "lint": "tslint --project 'tslint.json' 'src/**/*.ts' 'test/**/*.ts'",
    "license-check": "node ../../scripts/license-check.js"
  },
  "dependencies": {
    "@types/crypto-js": "^3.1.38",
    "@types/mz": "^0.0.32",
    "@types/pouchdb": "^6.3.2",
    "@types/pouchdb-find": "^6.3.2",
    "@types/winston": "^2.3.7",
    "crypto-js": "^3.1.9-1",
    "graceful-fs": "^4.1.11",
    "inversify": "^4.9.0",
    "minimist": "^1.2.0",
    "mz": "^2.7.0",
    "pouchdb-adapter-http": "^6.4.1",
    "pouchdb-ajax": "^6.4.1",
    "pouchdb-authentication": "^1.1.0",
    "pouchdb-core": "^6.4.1",
    "pouchdb-find": "^6.4.1",
    "reflect-metadata": "^0.1.10",
    "uid-generator": "^1.0.0",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/jasmine": "^2.8.9",
    "jasmine": "^3.2.0",
    "jasmine-spec-reporter": "^4.2.1",
    "jasmine-ts": "^0.2.1",
    "nyc": "^11.4.1",
    "pouchdb-security-helper": "^1.1.1",
    "tslint": "^5.8.0",
    "typescript": "^3.0.3",
    "watch": "^1.0.2"
  },
  "license-check-config": {
    "src": [
      "src/**/*.js",
      "src/**/*.ts",
      "test/**/*.js",
      "test/**/*.ts",
      "!./node_modules/**/*"
    ],
    "path": "config/header.txt",
    "blocking": false,
    "logInfo": false,
    "logError": true
  }
}
